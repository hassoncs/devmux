{
  "name": "devmux-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "devmux CLI and documentation monorepo",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "type-check": "pnpm -r run type-check",
    "cli:build": "pnpm --filter @chriscode/devmux build",
    "cli:dev": "pnpm --filter @chriscode/devmux dev",
    "landing:dev": "pnpm --filter landing dev",
    "landing:build": "pnpm --filter landing build",
    "landing:deploy": "pnpm --filter landing build && pnpm --filter landing deploy"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
